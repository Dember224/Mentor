<div class="container">
  <div class="warning"><h1>Warning! You will lose all access to a user by unmatching.</h1></div>
  <%= form_for(@my_pairs, :method => :delete) do |delete| %>
    <% if @my_pairs.is_a?(Array) %>
      <% @my_pairs.each do |delete_options| %>
        <%= User.find(delete_options.mentee_id).name %>
        <%= delete.radio_button(:id, delete_options.id) %>
      <% end %>
    <% else %>
      <%= User.find(@my_pairs.mentee_id).name %>
      <%= delete.radio_button(:id,  @my_pairs.id) %>
    <% end %>
    <%= delete.submit "Unmatch", :class => "btn text"%>
  <% end %>
